---
interface Props {
  href: string;
  rel?: string;
  class?: string;
}

const { href, rel = "prefetch", class: className = "" } = Astro.props;
---

<a
  href={href}
  rel={rel}
  class:list={[
    "inline-block rounded bg-primary px-4 py-2 font-sans text-white transition-all hover:brightness-95",
    className,
  ]}
>
  <slot />
</a>
